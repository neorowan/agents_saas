# ============================================
# CONFIGURAÇÃO BÁSICA - OBRIGATÓRIO
# ============================================

# Porta da aplicação
PORT=3210

# URL da aplicação (importante para callbacks OAuth)
APP_URL=http://localhost:3210

# Segredo para criptografia (MUDE ISSO!)
KEY_VAULTS_SECRET=your-secret-key-min-32-chars-change-this

# NextAuth Secret (MUDE ISSO!)
NEXT_AUTH_SECRET=your-nextauth-secret-change-this-please

# ============================================
# BANCO DE DADOS
# ============================================

DATABASE_NAME=lobe
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=uSeBetterPassword123!

# ============================================
# PROVEDORES DE IA (adicione conforme necessário)
# ============================================

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL_LIST=gpt-3.5-turbo,gpt-4

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL_LIST=claude-3-haiku,claude-3-sonnet

# ============================================
# STORAGE (opcional)
# ============================================

# MinIO Local (substitui S3)
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=lobe-chat
S3_ENDPOINT=http://minio:9000
S3_PUBLIC_DOMAIN=http://localhost:9000

# ============================================
# OTIMIZAÇÕES PARA 8GB RAM
# ============================================

# Limite de upload (em MB)
NEXT_PUBLIC_UPLOAD_MAX_SIZE=10

# Workers do Next.js
NEXT_SHARP_PATH=/tmp
NEXT_TELEMETRY_DISABLED=1

# ============================================
# FEATURE FLAGS (opcional)
# ============================================

# Desabilite features pesadas se necessário
FEATURE_FLAGS=webrtc:0,tts:0

# ============================================
# MONITORAMENTO (opcional)
# ============================================

# Sentry (para produção)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=